<p id="notice"><%= notice %></p>

<h1>Source Masters</h1>

<table>
  <thead>
    <tr>
      <th>Source desc</th>
      <th>Comment</th>
      <th>Active status</th>
      <th>Del status</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @source_masters.each do |source_master| %>
      <tr>
        <td><%= source_master.source_desc %></td>
        <td><%= source_master.comment %></td>
        <td><%= source_master.active_status %></td>
        <td><%= source_master.del_status %></td>
        <td><%= source_master.user_id %></td>
        <td><%= link_to 'Show', source_master %></td>
        <td><%= link_to 'Edit', edit_source_master_path(source_master) %></td>
        <td><%= link_to 'Destroy', source_master, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

